generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model usuarios {
  id            Int       @id @default(autoincrement())
  usuario       String?   @db.VarChar(50) @unique
  contrase√±a   String?   @db.VarChar(50)
  fechacreacion DateTime? @default(now()) @db.DateTime(0)
}

model cursos{
   id           Int      @id @default(autoincrement())
  titulo       String?  @db.VarChar(70) 
  descripcion  String?  @db.VarChar(100)
  area         String?  @db.VarChar(50)
  duracion     String?  @db.VarChar(50)
  fechaPublica DateTime? 
  fechaCierre  DateTime?
  certificado   String?   @db.VarChar(50)
  cursoLibre    String?   @db.VarChar(50)
  evaluacion    String?   @db.VarChar(50)
  obligatorio   String?   @db.VarChar(50)
}